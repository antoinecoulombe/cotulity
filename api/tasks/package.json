{
  "name": "api-tasks",
  "version": "1.0.0",
  "description": "Cotulity's tasks microservice api",
  "main": "./dist/server.js",
  "scripts": {
    "start": "npx ts-node ./src/server.ts",
    "start:test": "cross-env NODE_ENV=test npx ts-node ./src/server.ts",
    "dev": "cross-env TZ=UTC NODE_ENV=development tsnd --inspect=0.0.0.0:9228 --respawn src/server.ts",
    "dev:test": "cross-env TZ=UTC NODE_ENV=test tsnd --inspect=0.0.0.0:9228 --respawn src/server.ts",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "migrate:reset": "npm run migrate:undo && npm run migrate && npm run seed",
    "test": "cross-env NODE_ENV=test jest --testTimeout=30000 --detectOpenHandles",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "test:one": "cross-env NODE_ENV=test npm run migrate:reset && jest $TEST --testTimeout=30000 --detectOpenHandles",
    "test:noci": "cross-env NODE_ENV=test npm run migrate:reset && jest --testPathIgnorePatterns='.*(_noci_).*' --testTimeout=30000 --detectOpenHandles",
    "coverage": "cross-env NODE_ENV=test npm run migrate:reset && jest --testTimeout=30000 --collectCoverage --detectOpenHandles"
  },
  "author": "coulombe.antoine@hotmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/mysql": "^2.15.18",
    "@types/node": "^15.12.4",
    "@types/validator": "^13.1.4",
    "sequelize-cli": "^6.2.0",
    "ts-node-dev": "^1.1.8",
    "tslint": "^5.20.1",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/register": "^7.14.5",
    "axios": "^0.25.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^2.5.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.2"
  }
}
